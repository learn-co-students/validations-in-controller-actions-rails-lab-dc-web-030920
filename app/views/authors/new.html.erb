<h2>Create an Author</h2>
<ul>
<% if @author.errors.full_messages do |message | %>
  <li> <% message%></li><
  <%end%>
</ul>

<%= form_tag authors_path, method: "post" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name" %>
  </div>
  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>
  <%= submit_tag "Create Author" %>
<% end %>
